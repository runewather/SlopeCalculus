doctype html
html(lang='pt-br')
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		// As 3 meta tags acima *devem* vir em primeiro lugar dentro do `head`; qualquer outro conteúdo deve vir *após* essas tags
		title Slope Calculus | Aprenda upando
		// Bootstrap
		link(href='css/bootstrap.min.css', rel='stylesheet')
		link(rel='stylesheet', type='text/css', href='css/cadastro.css')
		link(href='vendor/font-awesome/css/font-awesome.min.css', rel='stylesheet', type='text/css')
		link(href='https://fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,500,500i,700,700i,900,900i', rel='stylesheet')
		// Icone da pagina
		link(rel='shortcut icon', type='image/png', href='img/slope_logo.png')
	body
		// navbar
		// Fixed navbar
		nav#header.navbar.navbar-fixed-top
			#header-container.container.navbar-container
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand
						img#logo1.img-responsive(src='img/logo1.png')
				#navbar.collapse.navbar-collapse
					ul.nav.navbar-nav.navbar-right
						li
							a.dropdown-toggle(href='/login', data-toggle='dropdown')
								i.fa.fa-sign-in(aria-hidden='true')
								|  Entrar 
								i.fa.fa-sort-desc(aria-hidden='true')
							ul#login-dp.dropdown-menu
								li
									.row
										.col-md-12
											| Login 
											form#login-nav.form(role='form', method='post', action='login', accept-charset='UTF-8')
												.form-group
													label.sr-only(for='exampleInputEmail2') E-mail
													input#exampleInputEmail2.form-control(type='email', placeholder='E-mail', required='')
												.form-group
													label.sr-only(for='exampleInputPassword2') Senha
													input#exampleInputPassword2.form-control(type='password', placeholder='Senha', required='')
													.help-block.text-right
														a(href='')
															| Esqueceu a 
															i senha
															|  ?
												.form-group
													button.btn.btn-primary.btn-block(type='submit') Entrar
												.checkbox
													label
														input(type='checkbox')
														|  keep me logged-in
										.bottom.text-center
											| Não tenho conta ! 
											a(href='#')
												b Criar
				// /.nav-collapse
			// /.container
		.container
			.row
				.col-md-6.col-md-offset-3
					.panel.panel-login
						.panel-body
							.row
								.col-lg-12
									form#register-form(action='/register', method='post', role='form', style='display: block;')
										h1
											| CADASTRE-SE 
											img.img-responsive.pull-right(src='img/logo2.png')
										.form-group
											input#name.form-control(type='text', name='name', tabindex='1', placeholder='Nome', value='')
										.form-group
											input#username.form-control(type='text', name='username', tabindex='1', placeholder='Username', value='')
										.form-group
											input#email.form-control(type='text', name='email', tabindex='1', placeholder='E-mail', value='')
										.form-group
											input#password.form-control(type='password', name='password', tabindex='2', placeholder='Senha')
										.form-group
											input#password.form-control(type='password', tabindex='2', placeholder='Confirmar senha')
										.col-xs-6.form-group.pull-left
											label.radio-inline
												input(type='radio', name='pessoa', value='true')
												| Sou Aluno
										.col-xs-6.form-group.pull-left
											label.radio-inline
												input(type='radio', name='pessoa', value='true')
												| Sou Professor
						.panel-heading
							.row
								.col-xs-6.tabs
									a#login-form-link.active(href='/')
										.login CANCELAR
								.col-xs-6.tabs
									a#register-form-link(href='#', onclick='register()')
										.register CONFIRMAR
		.footer-bottom
			.container
				p.pull-left  Copyright © Footer E-commerce Plugin 2014. All right reserved. 
				.pull-right
					a.direct(href='index.html')
						| Conheça nosso site 
						i.fa.fa-chevron-circle-right(aria-hidden='true')
		// /.footer-bottom
		script.
			function register()
			{
			document.getElementById("register-form").submit();
			}

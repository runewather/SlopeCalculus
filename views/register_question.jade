doctype html
html
  body
    h1 Cadastrar Questão
    form(action='/register_question', method='post', enctype='multipart/form-data')
      h2
        | Imagem da Questão
        h2
          input(type='file', name='img', accept='image/*')
          br
          h2 Primeira Opção
          input(type='text', name='c1')
          h2 Segunda Opção
          input(type='text', name='c2')
          h2 Terceira Opção
          input(type='text', name='c3')
          h2 Quarta Opção
          input(type='text', name='c4')
          br
          h2 Opção Correta
          input(type='text', name='correct')
          br
          br
          input(type='submit', value='Enviar')
